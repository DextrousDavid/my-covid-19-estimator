doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(name="Description", content="A web application which calculates the impact of covid19")
        link(rel="stylesheet", href="/static/stylesheets/css/bootstrap.min.css", media="screen")
        link(rel="stylesheet", href="/static/stylesheets/index.css",media="screen")
        title Covid-19 Estimator | Estimator
    body
        .container_fluid#application
            nav.navbar.navbar-dark.bg-dark#header
                a.navbar-brand(href='#')
                    h3 Impact Estimator
            .row.no-gutters
                .row.no-gutters
                .row.no-gutters
                    .col-sm-5
                        section.instructions(title="How to use the Estimator")
                            h5 Instructions
                            p
                                | Continent Info
                                ul
                                    li Input the name of a continents.
                                    li Average age on the continent.
                                    li Average daily income in USDs.
                                    li Average income population like 0.71 representing 70%.
                                    li Continental human population.
                                | Estimation Period
                                ul
                                    li Period Type can be days, weeks or months.
                                    li Time to lapse is numeric
                                | Infection Data
                                ul 
                                    li These are numeric figures partaining to regional infection rates.
                    .col-sm-7
                        form.commons_vertical(action="/client", method="post", title="The Covid-19 Estimator")
                            fieldset
                                legend Continent Information
                                table
                                    tbody
                                        tr
                                            td: label(for="name") Continent :
                                            td: input.form-control#name(type="text", name="name", placeholder="Africa...", required, autocomplete="off")
                                        tr
                                            td: label(for="avgAge") Average Age :
                                            td: input.form-control#avgAge(type="text", name="avgAge", placeholder="19.7", required,autocomplete="off")
                                        tr
                                            td: label(for="avgDailyIncomeInUSD") Average Daily Income (USD) :
                                            td: input.form-control#avgDailyIncomeInUSD(type="text", name="avgDailyIncomeInUSD", placeholder="5",required,autocomplete="off")
                                        tr
                                            td: label(for="avgDailyIncomePopulation") Average Income Population :
                                            td: input.form-control#avgDailyIncomePopulation(type="text", name="avgDailyIncomePopulation", placeholder="0.71 for 71%",required,autocomplete="off")
                                        tr
                                            td: label(for="population") Population :
                                            td: input.form-control#population(type="number", name="population", required,autocomplete="off",data-population)
                            fieldset
                                legend Estimation Period
                                table
                                    tbody
                                        tr
                                            td: label(for="periodType") Period Type :
                                            td: select.form-control#periodType(name="periodType", data-period-type)
                                                option(value="days", selected) Days
                                                option(value="weeks") Weeks
                                                option(value="months") Months
                                        tr
                                            td: label(for="timeToElapse") Period :
                                            td: input.form-control#timeToElapse(type="number", name="timeToElapse", placeholder="30",required,autocomplete="off",data-time-to-elapse)                      
                            fieldset
                                legend Infection Data
                                table
                                    tbody
                                        tr
                                            td: label(for="reportedCases") Reported cases :
                                            td: input.form-control#reportedCases(type="number", name="reportedCases", placeholder="0", required,autocomplete="off",data-reported-cases)
                                        tr
                                            td: label(for="totalHospitalBeds") Hospital beds :
                                            td: input.form-control#totalHospitalBeds(type="number", name="totalHospitalBeds", placeholder="0", required,autocomplete="off",data-total-hospital-beds)
                            button.btn.btn-primary.btn-lg.btn-block#btn_estimator(type="submit", data-go-estimate, style="height: 70px; width:130px; margin: 15px") Run Estimator
                            script(src="/static/js/bootstrap.min.js")
                            script(src="/static/js/jquery.js")

